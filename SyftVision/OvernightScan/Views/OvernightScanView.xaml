                <!--DPIS-->
                <RadioButton x:Name="BtnSourceSwitchStability" Command="{Binding Open_SourceSwitchStability_Command}" Style="{DynamicResource MaterialDesignRaisedButton}" Height="40" Margin="15 20 15 0" materialDesign:ShadowAssist.ShadowDepth="Depth3" HorizontalContentAlignment="Left" Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
