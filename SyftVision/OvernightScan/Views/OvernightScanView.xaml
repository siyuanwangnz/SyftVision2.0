        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Border Margin="20 0 20 0" BorderBrush="#673BB7" BorderThickness="0 0 0 0.3"></Border>

            <Grid Grid.Row="0">
                <StackPanel Margin="10 0 10 0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <ComboBox Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                            materialDesign:TextFieldAssist.UnderlineBrush="#673BB7"
                            materialDesign:ColorZoneAssist.Mode="Standard"
                            materialDesign:HintAssist.Hint="Batch Type"
                            MaxDropDownHeight="Auto"
                            MinWidth="115"
                            Margin="10 0 10 0" SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBoxItem Content="SPIS-Overnight" IsSelected="{Binding SPISOvernightSelected}"/>
                        <ComboBoxItem Content="SPIS-On/Off" IsSelected="{Binding SPISOnOffSelected}" />
                        <ComboBoxItem Content="SPIS-EOV" IsSelected="{Binding SPISEOVSelected}" />
                        <ComboBoxItem Content="SPIS-Weekend" IsSelected="{Binding SPISWeekendSelected}" />
                        <Separator/>
                        <ComboBoxItem Content="DPIS-Coarse" IsSelected="{Binding DPISCoarseSelected}"/>
                        <ComboBoxItem Content="DPIS-Fine" IsSelected="{Binding DPISFineSelected}"/>
                        <ComboBoxItem Content="DPIS-EOV" IsSelected="{Binding DPISEOVSelected}"/>
                        <ComboBoxItem Content="DPIS-ColdStart" IsSelected="{Binding DPISColdStartSelected}"/>
                        <ComboBoxItem Content="DPIS-Sensitivity&amp;Impurity" IsSelected="{Binding DPISSensAndImpuSelected}"/>
                        <Separator/>
                        <ComboBoxItem Content="Infinity" IsSelected="{Binding InfinitySelected}"/>
                        <ComboBoxItem Content="Infinity-ColdStart" IsSelected="{Binding InfinityColdStartSelected}"/>
                        <ComboBoxItem Content="Infinity-EOB" IsSelected="{Binding InfinityEOBSelected}"/>
                        <ComboBoxItem Content="Infinity-Sensitivity&amp;Impurity" IsSelected="{Binding InfinitySensAndImpuSelected}"/>
                    </ComboBox>
                    <ComboBox x:Name="CbxNumberofScan" Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            materialDesign:ComboBoxAssist.ShowSelectedItem="True"
                            materialDesign:TextFieldAssist.UnderlineBrush="#673BB7"
                            materialDesign:ColorZoneAssist.Mode="Standard"
                            materialDesign:HintAssist.Hint="Number of Batch"
                            MinWidth="115"
                            Margin="10 0 10 0"
                            Visibility="Collapsed">
                        <ComboBoxItem Content="1" IsSelected="{Binding OneSelected}"/>
                        <ComboBoxItem Content="2" IsSelected="{Binding TwoSelected}" />
                        <ComboBoxItem x:Name="Number3" Content="3" IsSelected="{Binding ThreeSelected}" Visibility="Visible"/>
                        <ComboBoxItem x:Name="Number4" Content="4" IsSelected="{Binding FourSelected}" Visibility="Visible"/>
                        <ComboBoxItem x:Name="Number5" Content="5" IsSelected="{Binding FiveSelected}" Visibility="Visible"/>
                    </ComboBox>
                    <DatePicker Width="115" Margin="10 0 10 0" materialDesign:HintAssist.Hint="Start Date" 
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"  Focusable="False"
                                SelectedDate="{Binding StartDate}" />
                    <materialDesign:TimePicker Width="115" Margin="10 0 10 0" materialDesign:HintAssist.Hint="Start Time"
                                               Style="{StaticResource MaterialDesignFloatingHintTimePicker}" Focusable="False" WithSeconds="True" Is24Hours="True"
                                               SelectedTime="{Binding StartTime}"/>
                    <materialDesign:PopupBox x:Name="PPBMatchConfig"  StaysOpen="True" Margin="10 0 10 0">
                        <materialDesign:PopupBox.ToggleContent>
                            <Grid>
                                <Border BorderBrush="#673BB7" Height="35" Width="115"  BorderThickness="1 1 1 1" CornerRadius="2"></Border>
                                <TextBlock Text="Match Config" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#673BB7"></TextBlock>
                            </Grid>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="250" Margin="8,0,8,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <materialDesign:ColorZone Grid.Row="0" Mode="SecondaryMid" Padding="10" Background="#673BB7" materialDesign:ShadowAssist.ShadowDepth="Depth2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Cog" Margin="4,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Margin="10,0,0,0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Match Configuration" Foreground="White"/>
                                </StackPanel>
                            </materialDesign:ColorZone>
                            <GroupBox Grid.Row="1" Margin="0 15 0 0">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Match Intensity Level:"  Foreground="White"></TextBlock>
                                        <TextBlock Text="{Binding SliderValue}" Foreground="White" Margin="10 0 0 0"></TextBlock>
                                    </StackPanel>
                                </GroupBox.Header>
                                <Slider Margin="20 0 20 0" Value="{Binding SliderValue}" Minimum="0" Maximum="2" TickFrequency="1" Style="{StaticResource MaterialDesignDiscreteSlider}" TickPlacement="TopLeft" ></Slider>
                            </GroupBox>
                            <GroupBox Grid.Row="2" Margin="0 15 0 0">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Position of Batches Selection:" Foreground="White"></TextBlock>
                                        <TextBlock Foreground="White" Margin="10 0 0 0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" >
                                                    <Setter Property="Text" Value="Head" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TailSelected}" Value="True">
                                                            <Setter Property="Text" Value="Tail" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </GroupBox.Header>
                                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                    <RadioButton Width="125" Style="{StaticResource MaterialDesignTabRadioButton}"  Content="Head">
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Select Patches From Head (The Earliest)" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                    <RadioButton Width="125" Style="{StaticResource MaterialDesignTabRadioButton}"  IsChecked="{Binding TailSelected}" Content="Tail" >
                                        <RadioButton.ToolTip>
                                            <TextBlock Text="Select Patches From Tail (The Latest)" Style="{StaticResource MaterialDesignSubtitle2TextBlock}"/>
                                        </RadioButton.ToolTip>
                                    </RadioButton>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </materialDesign:PopupBox>
                    <TextBox materialDesign:HintAssist.Hint="IP Address" 
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                                 VerticalAlignment="Center" MinWidth="115" Margin="10 0 10 0"
                                 Text="{Binding IPAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding ProcessCommand}" Key="Enter"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    <Button Command="{Binding ProcessCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            HorizontalAlignment="Center"
                            materialDesign:ButtonProgressAssist.Value="{Binding ProcessButtonProgress}"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            MinWidth="128"
                            Margin="10 0 10 0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartBar" Height="20" Width="20" Visibility="{Binding ShowProcessButtonProcess, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>
                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Foreground="White" Height="20" Width="20" Visibility="{Binding ShowProcessButtonProcess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <TextBlock Text="Process" VerticalAlignment="Center" Margin="5 0 0 0" FontSize="15" ></TextBlock>
                        </StackPanel>
                    </Button>
                    <materialDesign:PopupBox  StaysOpen="True" Margin="10 0 10 0">
                        <materialDesign:PopupBox.ToggleContent>
                            <Grid>
                                <materialDesign:ColorZone Mode="PrimaryMid"  Padding="16" CornerRadius="2" materialDesign:ShadowAssist.ShadowDepth="Depth1" ClipToBounds="False" Height="32" Width="128"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="ContentSaveAllOutline" Height="20" Width="20" Visibility="{Binding ShowSaveButtonProcess, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" Foreground="White"/>
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Foreground="White" Height="20" Width="20" Visibility="{Binding ShowSaveButtonProcess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    <TextBlock Text="Save" FontWeight="Medium"  VerticalAlignment="Center" Margin="5 0 0 0" FontSize="15" Foreground="White" />
                                </StackPanel>
                            </Grid>
                        </materialDesign:PopupBox.ToggleContent>
                        <Grid Width="250" Margin="8,0,8,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <materialDesign:ColorZone Grid.Row="0" Mode="SecondaryMid" Padding="10" Background="#673BB7">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Cog" Margin="4,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                                    <TextBlock Margin="10,0,0,0" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Text="Save Configuration" Foreground="White"/>
                                </StackPanel>
                            </materialDesign:ColorZone>
                            <CheckBox Grid.Row="1" Content="Save Scan Files" Margin="0 15 0 0" IsChecked="{Binding SaveScanFilesEnable}"/>
                            <TextBox Grid.Row="2" Text="{Binding Comments, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0 15 0 0" Style="{StaticResource MaterialDesignOutlinedTextBox}" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" materialDesign:HintAssist.Hint="Instrument Comments" SpellCheck.IsEnabled="True"/>
                            <Button Grid.Row="3" Margin="0 15 0 0" Style="{StaticResource MaterialDesignFlatButton}" Content="Save" Command="{Binding SaveCommand}"/>
                        </Grid>
                    </materialDesign:PopupBox>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <ContentControl prism:RegionManager.RegionName="OvernightScanContentRegion" Margin="10 10 10 10"/>
                <Image gif:AnimationBehavior.SourceUri="/Image/giphy.gif" Margin="100" Visibility="{Binding ShowProcessButtonProcess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Text="{Binding ProcessButtonProgress, StringFormat={}{0:F2}%}" Margin="100" HorizontalAlignment="Center" FontWeight="Bold" Foreground="White" FontSize="60" Visibility="{Binding ShowProcessButtonProcess, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
